source "$POUNDER_HOME/libpounder.sh"

PKGNAME=ltp-full-20060105
TARNAME="$PKGNAME.tgz"

# Retrieve binary, if necessary
cd "$POUNDER_OPTDIR"
if [ ! -f "$TARNAME" ]; then
	if [ $USE_CACHE -eq 1 ]; then
		wget "${POUNDER_CACHE}${TARNAME}"
	fi
	if [ ! -f "$TARNAME" ]; then
		get_from_sourceforge ltp $TARNAME
	fi
fi

# Unpack if needed
if [ ! -d "$PKGNAME" ]; then
	tar -xzf "$TARNAME"

	# Apply a patch if this is Debian/Ubuntu.
	if [ -f /etc/debian_version ]; then
		cd $PKGNAME
		echo "Debian/Ubuntu detected; applying build fixes..."
		patch -p1 < $POUNDER_SRCDIR/ltp-debian-build.patch
		RESULT=$?
		cd -
		if [ $RESULT -ne 0 ]; then
			echo Patching failed.
			exit 1
		fi
	fi

	# NAK the setregid EPERM -> EINVAL patch, because it's
	# broken on 2.6!  May be fixed some time after 20050804 release.
	cd $PKGNAME
	echo "Patching some holes in ltp..."
	patch -p1 < $POUNDER_SRCDIR/ltp-setregid-fix.patch
	RESULT=$?
	cd -
	if [ $RESULT -ne 0 ]; then
		echo Patching failed.
		exit 1
	fi
fi

# Build
cd "$PKGNAME"
make -j$NR_CPUS
MK_RET=$?

if [ $MK_RET -eq 0 ]; then
	make install
	MK_RET=$?
fi

exit $MK_RET
