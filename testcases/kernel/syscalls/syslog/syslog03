cleanup()
{
if [ $status_flag -eq 0 ]
then
	tst_resm TPASS "ident string is prepended to the mesage."
else
	tst_resm TFAIL "ident string is not prepended to the mesage."
fi

#Restore syslog.conf
mv /etc/syslog.conf.ltpbak /etc/syslog.conf

#Restart syslog

tst_resm TINFO "Restart syslog"
/etc/init.d/syslog restart 2>&1 1>/dev/null || RC=$?
if [ $RC -ne 0 ]
then
	tst_resm TBROK "failed to restart syslog deamon"
	exit 1
fi
exit $status_flag
}

