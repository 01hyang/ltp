#!/bin/bash

. /etc/sysconfig/kdump
. ./config

echo ""
echo "----------------------------------------------------------"
echo "                        VMCORE SIZE                       "
echo "----------------------------------------------------------"
echo ""

ls -lh $1

echo ""
echo "----------------------------------------------------------"
echo "                        READELF                           "
echo "----------------------------------------------------------"
echo ""

readelf -a $1

if [ $CRASH_FOUND -eq 1 ]; then
echo ""
echo "----------------------------------------------------------"
echo "                        CRASH                             "
echo "----------------------------------------------------------"
echo ""

crash -i $CRASH_CMDS $VMLINUX_DEBUG $1

fi
